  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "logger_${date:format=yyyy-MM-dd}.log"
      },
      "logconsole": {
        "type": "Console",
        "layout": "${longdate} [${level:uppercase=true}] ${message}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevelStatus": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevelStatus": "Debug",
        "writeTo": "logfile"
      }
    ]
  }
